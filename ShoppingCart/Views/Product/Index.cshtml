@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    List<Category> categoryList = ViewBag.Categories;
}

<div class="text-center">
    <h1 class="display-4">Products</h1>
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Short description</th>
            <th>Long description</th>
            <th>Price</th>
            <th>Is in cart</th>
            <th>Category</th>
            <th>Available</th>
            <th>Image</th>
        </tr>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>@item.Name</td>
                <td>@item.ShortDescription</td>
                <td>@item.LongDescription</td>
                <td>@item.Price</td>
                <td>@item.IsInCart</td>
                <td>@categoryList.First(i => i.Id == item.CategoryId).Name</td>
                <td>@item.Available</td>
                <td><img class="img-thumbnail" src="./pictures/@item.Image" alt="@item.Image" width="100" height="100"></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
    <a asp-action="Create" class = "btn btn-primary">Add a new Product</a>

