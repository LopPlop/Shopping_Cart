@model ShoppingCart.Models.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="list-inline-item">
            <label asp-for="Email" class="control-label">Введите Email</label><br />
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
    </div>
    <div>
        <div class="list-inline-item">
            <label asp-for="Password" class="control-label">Введите пароль</label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
    </div>
    <div>
        <div class="list-inline-item">
            <label asp-for="ConfirmPassword" class="control-label">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="form-control"/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Регистрация" class="btn btn-primary mt-2" />
        </div>
    </div>
</form>