@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Products</h1>
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Short description</th>
            <th>Long description</th>
            <th>Price</th>
            <th>Is in cart</th>
            <th>Available</th>
            <th>Image</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ShortDescription</td>
                <td>@item.LongDescription</td>
                <td>@item.Price</td>
                <td>@item.IsInCart</td>
                <td>@item.Available</td>
                @if(item.Image == null)
                {
                    <td><img class="img-thumbnail" src="./pictures/1.jpeg" alt="@item.Image" width="100" height="100"></img></td>
                }
                else
                {
                    <td><img class="img-thumbnail" src="./pictures/@item.Image" alt="@item.Image" width="100" height="100"></img></td>
                }
                <td>
                    <a href="@Url.Action("Edit", new { @id =item.Id })" class="btn btn-outline-success" )">Edit</a>
                    <a href="@Url.Action("Delete", new { @id =item.Id })" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
    <a asp-action="Create" class = "btn btn-primary">Add a new Product</a>

